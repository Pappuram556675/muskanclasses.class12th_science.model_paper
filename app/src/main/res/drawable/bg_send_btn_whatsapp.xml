<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#1DA955" /> <!-- Darker green when pressed -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#25D366" /> <!-- WhatsApp Green -->
            <size android:width="48dp" android:height="48dp"/>
            <corners android:radius="24dp"/>
            <stroke android:width="1dp" android:color="#1DA955"/>
            <padding android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp"/>
        </shape>
    </item>
</selector>
